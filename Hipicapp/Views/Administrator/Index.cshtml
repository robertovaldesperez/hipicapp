@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Hipicapp Backoffice</title>
    <meta content="Hipicapp. Gestión de concursos hípicos de salto de obstáculos y doma clásica." lang="es-ES" name="description">
    <meta content="hípica movil salto obstáculos doma clásica" lang="es-ES" name="keywords">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
    <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
    <link rel="apple-touch-icon" href="~/Content/images/hipicapp-logo.png" />
    <link rel="shortcut icon" type="image/png" href="/hipicap-favicon.ico" />

    @Styles.Render("~/Content/administrator-css")
    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>
<body class="nav-md pace-done">
    <div id="applicationHost">
        @Html.Partial("_splash")
    </div>
    @Scripts.Render("~/Scripts/administrator-vendor")
    <script src="~/Scripts/sjcl-1.0.4.js"></script>
    <script src="~/Scripts/amplify-1.1.0.js"></script>
    <script src="~/Scripts/amplify-request-deferred-0.0.0.js"></script>
    <script type="text/javascript" src="~/Scripts/require.js" data-main="/App_Administrator/main"></script>
</body>
</html>